# Database
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Upwork OAuth (get from https://www.upwork.com/developer/keys/app)
UPWORK_CLIENT_ID=your-upwork-client-id
UPWORK_CLIENT_SECRET=your-upwork-client-secret
UPWORK_REDIRECT_URI=https://your-app-url/api/upwork/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3001

# Port
PORT=3001

# Volna API (optional - can also configure in Settings page)
# VOLNA_API_KEY=your-volna-api-token
# VOLNA_SETUP_ID=your-setup-id
